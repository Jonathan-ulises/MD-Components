<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AlertDialogFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:padding="@dimen/common_padding_default">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_info"
        app:cornerRadius="@dimen/common_padding_default"
        app:strokeWidth="@dimen/common_padding_nano"
        app:strokeColor="@color/primary_color"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_chooser"
        app:cornerRadius="@dimen/common_padding_default"
        app:strokeWidth="@dimen/common_padding_nano"
        app:strokeColor="@color/primary_color"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_confirm"
        app:cornerRadius="@dimen/common_padding_default"
        app:strokeWidth="@dimen/common_padding_nano"
        app:strokeColor="@color/primary_color"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_full_screen"
        app:cornerRadius="@dimen/common_padding_default"
        app:strokeWidth="@dimen/common_padding_nano"
        app:strokeColor="@color/primary_color"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>